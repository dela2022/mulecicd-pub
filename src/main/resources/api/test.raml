#%RAML 1.0
title: hello-world-sys-api
description: System API

mediaType: [application/json]
protocols:
  - HTTP

/contact:
  get:
    responses:
      200:
        body:
          application/json:
            example: !include getExample.json

  /{Id}:
    get:
      responses:
        200:
          body:
            application/json:
              example: !include getContactByIdResponse.json

  post:
    body:
      application/json:
        example: !include postRequestExample.json
    responses:
      201:
        body:
          application/json:
            example: !include postResponseExample.json
